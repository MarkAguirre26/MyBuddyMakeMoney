<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBG"
    tools:context=".FragmentMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonsPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/RoardHeaderLinearlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue_dark"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="BEAD ROAD"
                    android:textAllCaps="true"
                    android:textColor="@color/white"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="BIG ROAD"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/RoardHeaderLinearlayout"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:scrollX="0dp"
                android:scrollbars="none">

                <TableLayout
                    android:id="@+id/tableLayoutBeadRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <!-- Table rows will be added dynamically in the Java code -->
                </TableLayout>
            </HorizontalScrollView>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonsPanel"
                android:paddingBottom="10dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center" />

                    <HorizontalScrollView
                        android:id="@+id/trackerPanelHorizontalScroller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:scrollX="0dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/trackerPanel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <!--                    <TextView-->
                            <!--                        android:layout_width="30dp"-->
                            <!--                        android:layout_height="match_parent"-->
                            <!--                        android:layout_margin="1dp"-->
                            <!--                        android:background="@drawable/win_skip"-->
                            <!--                        android:gravity="center"-->
                            <!--                        android:text="W"-->
                            <!--                        android:textColor="@color/white"-->
                            <!--                        android:textSize="15sp"-->
                            <!--                        android:textStyle="bold" />-->


                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/Handspanels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="horizontal">
                            <!-- First grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="Skip"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtSkip"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="No"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>
                            <!-- Second grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/player"
                                        android:gravity="center"
                                        android:text="Player"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtPlayerHandCount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                            <!-- Third grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/banker"
                                        android:gravity="center"
                                        android:text="Banker"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtbankerHandCount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                            <!-- Forth grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="Hand"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtHand"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/signalPanel"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txtPrediction"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/wait"
                            android:gravity="center"
                            android:text="Wait"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@color/blue_dark"
                                android:gravity="center"
                                android:text="Stake"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/txtBetAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:background="@color/button_borders"
                                android:gravity="center"
                                android:text="0.10"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                    <HorizontalScrollView
                        android:id="@+id/moneyManagementHorizonalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/StartNowUnitsProfit"
                        android:layout_marginBottom="2dp"
                        android:scrollX="0dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/winAndLossLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                        <!--                        <include-->
                        <!--                            layout="@layout/star_blaze_layout"/>-->

                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/StartNowUnitsProfit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="horizontal">
                            <!-- First grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="@string/Start"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>
                            <!-- Second grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="@string/Now"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                            <!-- Third grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="@string/Units"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtProfitByUnit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                            <!-- Forth grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="@string/Profit"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtProfit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"

                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/PeakTroughDrawdownPanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="horizontal">
                            <!-- First grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="Stop Loss"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtStopLoss"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>
                            <!-- Second grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="Stop Profit"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtStopProfit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                            <!-- Third grid -->
                            <GridLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:background="@color/blue_dark"
                                        android:gravity="center"
                                        android:text="Shield"
                                        android:textAlignment="center"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/txtShield"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:text="0-0"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </GridLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsPanel"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp"

        android:weightSum="5">

        <!-- Lower part of the screen with five equal-sized grids -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">
            <!-- First grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">
                <!-- Add your views for the first grid here -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/player_button_background"
                    android:text="P"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </GridLayout>

            <!-- Second grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBanker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/banker_button_background"
                    android:onClick="btnBanker_Clicked"
                    android:text="B"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </GridLayout>

            <!-- Third grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSkip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/skip_button_background"
                    android:onClick="btnSkip_Clicked"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </GridLayout>

            <!-- Fourth grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">
                <!-- Add your views for the fourth grid here -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUndo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/undo_button_background"
                    android:onClick="btnUndo_Clicked"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </GridLayout>

            <!-- Fifth grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!-- Add your views for the fifth grid here -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnReset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/reset_button_background"
                    android:onClick="btnReset_Clicked"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </GridLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
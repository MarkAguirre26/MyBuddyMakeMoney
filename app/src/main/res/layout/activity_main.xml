<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/NavBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:id="@+id/txtStrategyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="{StrategyName}"
            android:textColor="@color/blue_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMoneyManagementName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="{MoneyManagementName}"
            android:textColor="@color/blue_dark"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />

    </LinearLayout>

        <com.virtual.software.mybuddymakemoney.CustomViewPager
            android:layout_below="@+id/NavBarLinearLayout"
            android:id="@+id/viewPager"
            android:background="#00FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


</RelativeLayout>
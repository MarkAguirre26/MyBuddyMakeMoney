<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">


            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:text="Unit/Balance"
                android:textStyle="bold" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unit Size" />

                    <EditText
                        android:id="@+id/txtBaseBet"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_style"
                        android:numeric="decimal"
                        android:paddingStart="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Required Balance" />

                    <EditText
                        android:id="@+id/txtBuyIn"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_style"
                        android:numeric="integer"
                        android:paddingStart="10dp" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:text="Stop trigger"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stop profit by unit" />

                    <EditText
                        android:id="@+id/txtStopProfitUnit"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_style"
                        android:numeric="integer"
                        android:paddingStart="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stop loss by unit" />

                    <EditText
                        android:id="@+id/txtStopLossUnit"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_style"
                        android:numeric="integer"
                        android:paddingStart="10dp" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:text="Shield"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginEnd="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. Lose" />

                    <EditText
                        android:id="@+id/txtLossShield"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_style"
                        android:numeric="decimal"
                        android:paddingStart="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. Win" />

                    <EditText
                        android:id="@+id/txtWinShield"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_style"
                        android:numeric="integer"
                        android:paddingStart="10dp" />
                </LinearLayout>

            </LinearLayout>


<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/btnSaveSetting"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/button_player"-->
<!--                android:text="Save"-->
<!--                android:textColor="@color/white" />-->

        </LinearLayout>
    </ScrollView>


</RelativeLayout>